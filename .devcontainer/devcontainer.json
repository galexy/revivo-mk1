{
  "name": "Personal Finance Platform",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "../docker-compose.override.yml"
  ],
  "service": "app",
  "workspaceFolder": "/workspace",

  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ckolkman.vscode-postgres",
        "ms-python.debugpy",
        "tamasfe.even-better-toml",
        "eamodio.gitlens",
        "nrwl.angular-console"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "strict",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
          }
        },
        "ruff.lint.run": "onSave",
        "editor.rulers": [88],
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },

  "forwardPorts": [8000, 5432, 8025],

  "remoteUser": "developer",

  "mounts": [
    "source=personal-finance-bashhistory,target=/commandhistory,type=volume",
    "source=${localWorkspaceFolder}/.claude-local,target=/home/developer/.claude,type=bind"
  ],

  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/developer/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "DATABASE_URL": "postgresql+asyncpg://postgres:postgres@postgres:5432/personal_finance",
    "DATABASE_URL_SYNC": "postgresql+psycopg2://postgres:postgres@postgres:5432/personal_finance",
    "ENVIRONMENT": "development",
    "LOG_LEVEL": "DEBUG"
  },

  "postCreateCommand": "uv sync && npm ci",
  "postStartCommand": "sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}
