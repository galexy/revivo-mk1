{
  "name": "Personal Finance Platform",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "runArgs": [
    "--cap-add=NET_ADMIN",
    "--cap-add=NET_RAW",
    "--init"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ckolkman.vscode-postgres",
        "ms-python.debugpy",
        "tamasfe.even-better-toml",
        "eamodio.gitlens",
        "nrwl.angular-console"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "strict",
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
          }
        },
        "ruff.lint.run": "onSave",
        "editor.rulers": [
          88
        ],
        "editor.formatOnSave": true,
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "forwardPorts": [
    8000,
    5432,
    8025,
    1025,
    9323
  ],
  "remoteUser": "developer",
  "mounts": [
    "source=personal-finance-bashhistory,target=/commandhistory,type=volume",
    "source=${localWorkspaceFolder}/.claude-local,target=/home/developer/.claude,type=bind"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/developer/.claude",
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true",
    "ENVIRONMENT": "development",
    "LOG_LEVEL": "DEBUG"
  },
  "postCreateCommand": "uv sync && npx pnpm install --frozen-lockfile",
  "postStartCommand": "sudo bash /workspace/scripts/setup-postgres.sh && sudo /usr/local/bin/init-firewall.sh",
  "waitFor": "postStartCommand",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}
