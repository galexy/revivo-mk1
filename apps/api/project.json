{
  "name": "api",
  "projectType": "application",
  "sourceRoot": "apps/api/src",
  "implicitDependencies": ["domain"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run --no-sync fastapi dev apps/api/src/adapters/api/app.py --host 0.0.0.0",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run --no-sync pytest apps/api/tests/ -v --tb=short",
        "cwd": "{workspaceRoot}"
      },
      "inputs": ["{projectRoot}/**/*.py", "{workspaceRoot}/libs/domain/**/*.py"],
      "outputs": []
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run --no-sync ruff check apps/api/src/ apps/api/tests/",
        "cwd": "{workspaceRoot}"
      },
      "inputs": ["{projectRoot}/**/*.py"],
      "outputs": []
    }
  }
}
