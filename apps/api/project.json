{
  "name": "api",
  "projectType": "application",
  "sourceRoot": "apps/api/src",
  "implicitDependencies": ["domain"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv/bin/uvicorn src.adapters.api.app:app --host 0.0.0.0 --port 8000 --reload",
        "cwd": "{workspaceRoot}"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv/bin/python -m pytest apps/api/tests/ -v --tb=short",
        "cwd": "{workspaceRoot}"
      },
      "inputs": ["{projectRoot}/**/*.py", "{workspaceRoot}/libs/domain/**/*.py"],
      "outputs": []
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": ".venv/bin/ruff check apps/api/src/ apps/api/tests/",
        "cwd": "{workspaceRoot}"
      },
      "inputs": ["{projectRoot}/**/*.py"],
      "outputs": []
    }
  }
}
